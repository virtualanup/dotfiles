!
! URxvt
!
URxvt*termName: rxvt-256color
URxvt.geometry: 80x40
URxvt.cursorUnderline: false
URxvt.cursorBlink: false
URxvt*scrollBar: false
URxvt*borderLess: false
URxvt.fading: 0
URxvt*hold: boolean
URxvt.intensityStyles: false
URxvt*urgentOnBell: false
URxvt.iconFile: /usr/share/icons/gnome-colors-common/24x24/apps/terminal.png

!! Larger history limit
urxvt.saveLines: 1000000

!! perl extension
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select,fullscreen

URxvt.clipboard.copycmd:  	xsel -ib
URxvt.clipboard.pastecmd: 	xsel -ob

URxvt*keysym.F11:   perl:fullscreen:switch

URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

!!
!! URLs
!!

!!
!! Clickable URLs
!!

URxvt.url-launcher: qutebrowser
URxvt.matcher.button: 1

!!
!! Paste
!!

URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: false

!!
!! Fonts
!!

URxvt.letterSpace: 0

URxvt.font:     xft:bitstream vera sans mono:size=12:antialias=true
URxvt.boldFont: xft:bitstream vera sans mono:bold:size=12:antialias=true

!!
!! Select text with the keyboard
!!

URxvt.keysym.M-Escape: perl:keyboard-select:activate

!!
!! Fix for Home and End keys
!!

URxvt.keysym.Home: \033[1~
URxvt.keysym.End: \033[4~
URxvt.keysym.KP_Home: \033[1~
URxvt.keysym.KP_End:  \033[4~


