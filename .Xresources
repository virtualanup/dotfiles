!
! URxvt
!
URxvt*termName: rxvt-256color
URxvt.geometry: 80x35
URxvt.cursorUnderline: false
URxvt.cursorBlink: false
URxvt*scrollBar: false
URxvt*borderLess: false
URxvt.fading: 0
URxvt*hold: boolean
URxvt.intensityStyles: false
URxvt*urgentOnBell: false
URxvt.iconFile: /usr/share/icons/gnome-colors-common/24x24/apps/terminal.png

!! Larger history limit
urxvt.saveLines: 1000000

!!
!! URLs
!!

URxvt.matcher.rend.0: Uline Bold fg6
URxvt.keysym.Control-l: perl:matcher:last
URxvt.keysym.Control-u: perl:matcher:list

!!
!! Clickable URLs
!!

URxvt.url-launcher: qutebrowser
URxvt.matcher.button: 1

!!
!! Paste
!!

URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: false

!!
!! Fonts
!!

URxvt.letterSpace: 0

URxvt.font:     xft:bitstream vera sans mono:size=12:antialias=true
URxvt.boldFont: xft:bitstream vera sans mono:bold:size=12:antialias=true
!!URxvt*font:xft:xos4Terminus:size=12, \
!!    xft:unifont:medium
!!URxvt*boldFont:xft:xos4Terminus:size=12, \
!!    xft:unifont:medium
!URxvt*font:xft:Terminus:size=12, \
!    xft:unifont:medium
!URxvt*boldFont:xft:Terminus:size=12, \
!    xft:unifont:medium

!!
!! Select text with the keyboard
!!

URxvt.keysym.M-Escape: perl:keyboard-select:activate

!!
!! Fix for Home and End keys
!!

URxvt.keysym.Home: \033[1~
URxvt.keysym.End: \033[4~
URxvt.keysym.KP_Home: \033[1~
URxvt.keysym.KP_End:  \033[4~

!!
!! Cursor theme
!!

Xcursor.theme: Vanilla-DMZ

! hard contrast: *background: #1d2021
*background: #181818
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #908374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2
